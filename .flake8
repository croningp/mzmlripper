[flake8]
max-line-length = 80
extend-ignore =
    # "Whitespace before ':'" - not PEP-8 compliant
    E203
    # "Line too long (82 >= 79 characters)" - allow comments and strings to pass
    # E501
    # module level import not at top of file
    # E402
    # too many leading '#' for block comment
    E266
per-file-ignores =
    __init__.py:F401
